<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->

    <!-- This preference simply launches an intent when selected. Use this UI sparingly, per
         design guidelines. -->

    <SwitchPreference
        android:defaultValue="false"
        android:key="pref_edu"
        android:summary="enable education features such as classrooms"
        android:title="Education Mode"/>
    <EditTextPreference
        android:defaultValue="0000-0000-0000"
        android:key="pref_classroom_code"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="0000-0000-0000"
        android:title="Class Code"/>
</PreferenceScreen>
