<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stochasticsystems.swirl.NewSimulationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="14dp"
                android:text="Total iterations"/>

            <TextView
                android:id="@+id/text_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_i"
                android:layout_margin="14dp"
                android:text="Total periods"/>

            <TextView
                android:id="@+id/text_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_p"
                android:layout_margin="14dp"
                android:text="Reporting interval"/>

            <TextView
                android:id="@+id/text_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_t"
                android:layout_margin="14dp"
                android:text="Max age"/>

            <TextView
                android:id="@+id/text_ar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_am"
                android:layout_margin="14dp"
                android:text="Reproduction age"/>

            <TextView
                android:id="@+id/text_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_ar"
                android:layout_margin="14dp"
                android:text="Gendered?"/>

            <TextView
                android:id="@+id/text_lm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_g"
                android:layout_margin="14dp"
                android:text="Max litter"/>

            <TextView
                android:id="@+id/text_pl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_lm"
                android:layout_margin="14dp"
                android:text="Probability of Litter"/>

            <TextView
                android:id="@+id/text_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_pl"
                android:layout_margin="14dp"
                android:text="Sex Ratio"/>

            <TextView
                android:id="@+id/text_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_rg"
                android:layout_margin="14dp"
                android:text="Correlation"/>

            <TextView
                android:id="@+id/text_mas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_c"
                android:layout_margin="14dp"
                android:text="Mortality % by A/S"/>

            <TextView
                android:id="@+id/text_sma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_mas"
                android:layout_margin="14dp"
                android:text="Variation in M"/>

            <TextView
                android:id="@+id/text_sr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_sma"
                android:layout_margin="14dp"
                android:text="Variation in Reproduction?"/>

            <TextView
                android:id="@+id/text_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_sr"
                android:layout_margin="14dp"
                android:text="Initial Population"/>

            <TextView
                android:id="@+id/text_k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_n"
                android:layout_margin="14dp"
                android:text="Carrying Capacity"/>

            <TextView
                android:id="@+id/text_sk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_k"
                android:layout_margin="14dp"
                android:text="Variation in K"/>

            <TextView
                android:id="@+id/text_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_sk"
                android:layout_margin="14dp"
                android:text="Harvest rate"/>

            <TextView
                android:id="@+id/text_sh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_h"
                android:layout_margin="14dp"
                android:text="Variation in H"/>

            <TextView
                android:id="@+id/text_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_sh"
                android:layout_margin="14dp"
                android:text="Supplement rate"/>

            <TextView
                android:id="@+id/text_ss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_s"
                android:layout_margin="14dp"
                android:text="Variation in S"/>

            <LinearLayout
                android:id="@+id/layout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/text_ss"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:text="Save"/>

                <Button
                    android:id="@+id/begin_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:text="Begin"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</android.widget.RelativeLayout>